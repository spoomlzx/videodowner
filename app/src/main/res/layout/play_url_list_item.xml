<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_play_url_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/tv_play_url_index"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:background="@drawable/play_url_bg"
        android:gravity="center"
        android:textSize="@dimen/text_size_small"
        android:paddingLeft="@dimen/default_general_margin"
        android:paddingRight="@dimen/default_general_margin"
        android:textColor="@color/item_text_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/hamAnimaImg"
        android:layout_width="@dimen/video_playing_icon_size"
        android:layout_height="@dimen/video_playing_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/video_playing" />


</androidx.constraintlayout.widget.ConstraintLayout>