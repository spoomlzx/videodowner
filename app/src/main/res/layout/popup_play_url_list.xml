<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windows_background"
    android:clickable="true"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:elevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="@dimen/default_grower_margin"
        android:paddingEnd="@dimen/default_general_margin">

        <TextView
            android:id="@+id/tv_vod_all_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="分集"
            android:textColor="@color/text_black_alpha" />

        <ImageView
            android:id="@+id/iv_vod_all_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/vector_close"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F2F2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_vod_list_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/default_grower_margin"
        android:paddingTop="10dp"
        android:paddingEnd="@dimen/default_general_margin" />
</LinearLayout>