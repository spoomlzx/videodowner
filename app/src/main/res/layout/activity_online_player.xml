<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.player.OnlinePlayerActivity">

    <org.nudt.videoplayer.VideoPlayer
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="210dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_grower_margin"
                android:layout_marginBottom="@dimen/default_general_margin"
                android:paddingStart="@dimen/default_grower_margin"
                android:paddingEnd="@dimen/default_general_margin"
                android:textColor="@color/text_gray"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_general_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/default_grower_margin"
                android:paddingEnd="@dimen/default_general_margin">


                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_video_play_time" />

                <TextView
                    android:id="@+id/tv_play_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="1:01:05"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_smaller" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_video_size" />

                <TextView
                    android:id="@+id/tv_file_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="2048"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_smaller" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/default_general_margin">

                <LinearLayout
                    android:id="@+id/btn_like"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_like" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_tiny_margin"
                        android:text="@string/icon_text_like"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_smaller" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_favor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_favor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_favor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_tiny_margin"
                        android:text="@string/icon_text_favorite"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_smaller" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_download"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_download" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_tiny_margin"
                        android:text="@string/icon_text_download"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_smaller" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_tiny_margin"
                        android:text="@string/icon_text_share"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_smaller" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_video_content_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/default_grower_margin"
                android:paddingEnd="@dimen/default_general_margin"
                android:text="简介:"
                android:textColor="@color/text_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_video_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_general_margin"
                android:layout_marginBottom="@dimen/default_general_margin"
                android:enabled="true"
                android:focusable="true"
                android:longClickable="true"
                android:paddingStart="@dimen/default_grower_margin"
                android:paddingEnd="@dimen/default_general_margin"
                android:textColor="@color/text_gray"
                android:textIsSelectable="true"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>